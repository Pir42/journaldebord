<%= form_with(model: fertilizer, local: true) do |form| %>
  <% if fertilizer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fertilizer.errors.count, "error") %> prohibited this fertilizer from being saved:</h2>

      <ul>
      <% fertilizer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :name, value: 'Nom' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :nitrogen, value: 'Azote' %>
      <%= form.number_field :nitrogen, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :phosphorus, value: 'Phosphore' %>
      <%= form.number_field :phosphorus, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :potassium, value: 'Potassium' %>
      <%= form.number_field :potassium, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :supplier, value: 'Fournisseur' %>
      <%= form.text_field :supplier, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :details, value: 'Détails' %>
      <%= form.text_area :details, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
     <% if current_page? new_fertilizer_path %>
        <%= form.submit 'Créer', class: 'btn btn-primary' %>
        <% else %>
        <%= form.submit 'Modifier', class: 'btn btn-primary' %>
        <% end %>
  </div>
<% end %>
