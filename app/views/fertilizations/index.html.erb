<p id="notice"><%= notice %></p>

<h1>Fertilizations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Fertilizer</th>
      <th>Quantity</th>
      <th>Parcel</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fertilizations.each do |fertilization| %>
      <tr>
        <td><%= fertilization.date %></td>
        <td><%= Fertilizer.find(fertilization.fertilizer_id).name %></td>
        <td><%= fertilization.quantity %></td>
        <td><%= Parcel.find(fertilization.parcel_id).idPlace %></td>
        <td><%= link_to 'Show', fertilization %></td>
        <td><%= link_to 'Edit', edit_fertilization_path(fertilization) %></td>
        <td><%= link_to 'Destroy', fertilization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

