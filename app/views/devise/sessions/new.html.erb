
  <header class="background1">
    <a href="#loginform"> scroll down</a>
  </header>

  <div class="container" id="loginform">
    <div class="align-middle">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'text-center'}) do |f| %>

      <p>GÃ©rez votre exploitation</p>
      <p>.</p>
      <p>Ajoutez, modifiez, consultez vos suivis de culture</p>

      <div class="form-signin">
        <div class="field">
          <%= f.label :email, class: 'sr-only' %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'sr-only' %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Mot de passe', class: 'form-control' %>
        </div>


      <% if devise_mapping.rememberable? %>

        <div class="field checkbox mb3">

          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, value: 'Se souvenir de moi' %>

        </div>

      <% end %>

      <div class="actions">
        <%= f.submit "Connexion", class: 'btn btn-lg btn-primary btn-block' %>
      </div>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <% end %>
    </div>
  </div>
