
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin text-center'}) do |f| %>
  
  <h2 class="h3 mb-3 font-weight-normal">Connexion</h2>

  <div class="field">
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Mot de passe', class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox mb3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, value: 'Se souvenir de moi' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Connexion", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>

<% end %>

