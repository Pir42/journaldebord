<p id="notice"><%= notice %></p>

<div class="index">

  <div class="modal fade" tabindex="-1" role="dialog" id="modalfilters" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
       <div class="modal-body">

          <div class="container-fluid">
            <%= form_tag("/events", method: "get") do %>

            <div class="row">
              <h2>FILTRER LES RECHERCHES</h2>
            </div>

            <div class="row">

              <div class="col">
                <%= label_tag("Date de début :") %><br>
                <%= date_field_tag(:from) %><br>

                <%= label_tag("Date de fin :") %><br>
                <%= date_field_tag(:to) %><br>
              </div>

              <div class="col">
                <%= label_tag("Parcelle :") %><br>
                <div class="row">
                  <%= collection_check_boxes(:parcel, :id, Parcel.where(user: current_user), :id, :name) do |b| %>
                    <div class="col-4">
                      <%= b.label(class:"label-checkbox") { b.check_box + b.text } %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="col">
                <%= label_tag("Légume :") %><br>
                <div class="row">
                  <%= collection_check_boxes(:vegetable, :id, Vegetable.where(user: current_user), :id, :name) do |b| %>
                    <div class="col-4">
                      <%= b.label(class:"label-checkbox") { b.check_box + b.text } %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="col">
                <%= label_tag("Variété :") %><br>
                <div class="row">
                  <%= collection_check_boxes(:variety, :id, Variety.where(user: current_user), :id, :name) do |b| %>
                    <div class="col-4">
                      <%= b.label(class:"label-checkbox") { b.check_box + b.text } %>
                    </div>
                  <% end %>
                </div>
              </div>


              <div class="col">
                <%= label_tag("Action:") %><br>
                <div class="row">
                  <%= collection_check_boxes(:action_type, :id, ActionType.where(user: current_user), :id, :name) do |b| %>
                    <div class="col-4">
                      <%= b.label(class:"label-checkbox") { b.check_box + b.text } %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="row text-right">
              <div class="col">

                <div class="actions">
                  <%= submit_tag "Rechercher" , :class => "btn btn-success" %><br>
                </div>

                <div class="actions">
                  <button type="button" class='btn btn-outline-secondary' id="Init">
                    <%= link_to "Effacer les filtres", events_path %>
                  </button>
                  <% end %>
                </div>

                <div class="actions">
                  <button type="button" class='btn btn-outline-danger' data-dismiss="modal">Fermer</button>
                </div>

              </div>
            </div>

          </div>

      </div>
    </div>
  </div>
</div>

  <h1>mes dernieres actions</h1>

  <div class='container'>
    <%= link_to 'Ajouter un suivi', new_event_path, class: 'btn btn-primary', id:"button_addsuivi" %>

    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalfilters">Filtres</button>
  </div>

  <table class="table table-stripped table-hover border-bottom">

    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Variété</th>
        <th scope="col">Parcelle</th>
        <th scope="col">Action</th>
        <th scope="col">Détails</th>
        <th scope="col">Quantité</th>
        <th scope="col">Unité</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <th scope="row"><%= event.date %></th>
          <td><%= Variety.find(event.variety_id).name %></td>
          <td><%= Parcel.find(event.parcel_id).idPlace %></td>
          <td><%= ActionType.find(event.action_type_id).name %></td>
          <td><%= event.details %></td>
          <td><%= event.quantity%></td>
          <td><%= event.unit %></td>
          <td><%= link_to 'Voir', event %></td>
          <td><%= link_to 'Modifier', edit_event_path(event) %></td>
          <td><%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Etes-vous sûrs ?' }, class: 'text-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
