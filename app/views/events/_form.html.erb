<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :date %>
      <%= form.date_select :date, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="field">
      <%= form.label :variety, value: 'Variété' %>
      <%= form.text_field :variety, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="field">
      <%= form.label :parcel, value: 'Parcelles' %>
      <%= form.text_field :parcel, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="field">
      <%= form.label :action %>
      <%= form.text_field :action, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="field">
      <%= form.label :details, value: 'Commentaire' %>
      <%= form.text_area :details, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="actions">
      <%= form.submit 'Créer', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
