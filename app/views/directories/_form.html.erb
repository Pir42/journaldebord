          </div>
        </div>  

        <div class="form-group col-md-4">
          <div class="field">
            <%= form.label :phone, value: 'Téléphone' %>
            <%= form.text_field :phone, class: 'form-control' %>
          </div>
        </div>
      </div>


      <div class="form-group">
          <div class="field">
            <%= form.label :address, value: 'Adresse' %>
