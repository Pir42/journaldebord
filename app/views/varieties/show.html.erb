<p id="notice"><%= notice %></p>

<div class="indexShowPage">

  <h1 class="mt-5">Fiche Variété</h1>

  <hr>

  <div class="container w-50 mt-5">
    <div class="row">
      <div class="col-12 mb-3">
        <p class="p-3 border border-secondary mb-4 rounded">
          Variété : <%= @variety.name %>
        </p>
      </div>
      <div class="col-12 mb-3">
        <p class="p-3 border border-secondary mb-4 rounded">
          Légume : <%= @variety.vegetable.name %>
        </p>
      </div>
    </div>
    <div class="row justify-content-center mt-5">
      <div class="col-4 text-center">
        <%= link_to 'Modifier', edit_variety_path(@variety), class: "btn btn-outline-primary pl-4 pr-4" %>
      </div>
      <div class="col-4 text-center">
        <%= link_to 'Retour', varieties_path, class: "btn btn-primary pl-4 pr-4" %>
      </div>
      <% if Event.where(variety_id: @variety.id).empty? && Treatment.where(variety_id: @variety.id).empty? %>
      <div class="col-4 text-center">
      <%= link_to 'Supprimer', @variety, method: :delete, data: { confirm: 'Êtes-vous sûrs ?' }, class: "btn btn-outline-danger pl-4 pr-4" %>
      </div>
      <% else %>

      <% end %>
    </div>
  </div>

</div>
