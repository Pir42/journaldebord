<%= form_with(model: variety, local: true) do |form| %>
  <% if variety.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(variety.errors.count, "error") %> prohibited this variety from being saved:</h2>

      <ul>
      <% variety.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :name, value: 'Nom' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="actions mb-3">
    <% if current_page? new_variety_path %>
      <%= form.submit 'Ajouter une variété', class: 'btn btn-primary' %>
    <% elsif current_page? edit_variety_path %>
      <%= form.submit 'Modifier', class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>
