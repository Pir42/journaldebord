<p id="notice"><%= notice %></p>

<div class="index">

<h1>Variétés</h1>

<table class="table table-stripped table-hover table-responsive">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Légume</th>
      <th scope="col">Utilisateur</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @varieties.each do |variety| %>
      <tr>
        <th scope="row"><%= event.date %></th>
        <td><%= Variety.find(event.variety_id).name %></td>
        <td><%= variety.name %></td>
        <td><%= variety.vegetable %></td>
        <td><%= variety.user %></td>
        <td><%= link_to 'Show', variety %></td>
        <td><%= link_to 'Edit', edit_variety_path(variety) %></td>
        <td><%= link_to 'Destroy', variety, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle Variété', new_variety_path, class: 'btn btn-primary' %>
</div>
